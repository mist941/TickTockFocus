{
  "manifest_version": 3,
  "name": "TickTockFocus - Advanced Timer",
  "version": "1.0",
  "description": "Powerful time management tool with customizable multi-stage timer presets. Perfect for Pomodoro technique and structured workflows.",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/chronometer.png"
  },
  "icons": {
    "16": "icons/chronometer16.png",
    "32": "icons/chronometer32.png",
    "48": "icons/chronometer48.png",
    "128": "icons/chronometer128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "alarms", "notifications"],
  "host_permissions": ["<all_urls>"]
}
