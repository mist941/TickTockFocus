{
  "manifest_version": 3,
  "name": "Simple Chrome Extension",
  "version": "1.0",
  "description": "This extension demonstrates a 'browser action' with a popup that changes the page color.",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon.svg"
  },
  "icons": {
    "16": "icons/icon.svg",
    "32": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "alarms"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
